<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:gravity="center" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_height="match_parent">
    <TextView android:id="@+id/countdown_text"  android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/willstartin"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_below="@id/countdown_text"
        android:layout_alignTop="@id/countdown_text"
        android:id="@+id/countdown_time" android:layout_width="match_parent" android:gravity="center" android:layout_height="wrap_content" android:text="00:00:00"
        android:layout_centerHorizontal="true"  android:layout_marginTop="28dp" android:textSize="30sp" />
</RelativeLayout>